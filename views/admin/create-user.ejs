<%- include('../components/header')%>
<section class="py-5">
  <div class="container">
    <form class="auth-form shadow mx-auto px-4 py-5" method="post">
      <h1 class="text-capitalize text-center mb-4">add new user</h1>

      <div class="field d-flex flex-column-reverse mt-2">
        <input type="text" name="firstName" class="w-100" required>
        <label for="firstName">first name</label>
      </div>

      <div class="field d-flex flex-column-reverse mt-2">
        <input type="text" name="lastName" class="w-100" required>
        <label for="lastName">last name</label>
      </div>

      <div class="field d-flex flex-column-reverse mt-2">
        <input type="email" name="email" class="w-100" required>
        <label for="email">email</label>
      </div>

      <div class="field d-flex flex-column-reverse mt-2">
        <input type="password" name="password" class="w-100" required>
        <label for="password">password</label>
      </div>

      <div class="field d-flex flex-column-reverse mt-2">
        <input type="password" name="password-confirm" class="w-100" required>
        <label for="password-confirm">confirm password</label>
      </div>

      <div class="mt-3">
        <h4 class="text-capitalize">gender</h4>
        <div class="d-flex">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="gender" id="gender" value="male">
            <label class="form-check-label" for="gender">
              male
            </label>
          </div>
          <div class="form-check ms-3">
            <input class="form-check-input" type="radio" name="gender" id="gender" value="female">
            <label class="form-check-label" for="gender">
              female
            </label>
          </div>
        </div>
      </div>

      <input type="submit" value="submit" class="btn btn-primary w-100 mt-3">

    </form>
    
    <% messages.forEach(function(message){ %>
      <div class="d-flex justify-content-center">
        <div class="alert alert-danger text-center mt-3 form-alert" role="alert">
          <%= message %>
        </div>
      </div>
    <% }); %>

  </div>
</section>
<%- include('../components/footer')%>
